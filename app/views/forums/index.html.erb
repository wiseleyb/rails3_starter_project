<% content_for :top_nav do %>
	<h1><%=link_to "Forums", forums_path %></h1>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
		<th>Owner</th>
  </tr>

	<% @forums.each do |forum| %>
	  <tr>
	    <td><%= link_to forum.name, forum_path(forum) %></td>
	    <td><%= forum.description.html_safe %></td>
			<td><%= link_to forum.user.name, user_path(forum.user) %></td>
	  </tr>
	<% end %>
</table>

<br />

<% if user_signed_in? %>
	<%= link_to 'New Forum', new_forum_path %>
<% end %>
