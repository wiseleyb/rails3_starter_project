<p>
  <%= post.body.html_safe %>
	<br/>
	by <%= link_to post.user.name, user_path(@user) %> on <%= link_to post.perma_link_text, forum_topic_post_path(@forum, @topic, post)%>
</p>

<% if editor?(post) %>
	<%= link_to 'Edit', edit_forum_topic_post_path(@forum, @topic, post) %> |
	<%= link_to 'Destroy', forum_topic_post_path(@forum, @topic, post), :confirm => 'Are you sure?', :method => :delete %> 
<% end %>

<hr/>